    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python模块",
            "type": "debugpy",
            "request": "launch",
            // "connect": {
            //     "host": "localhost",
            //     "port": 38179,
            // }
            "module": "src.toxicity.evaluate",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python:debugpy调试样例",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 7550
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/",
                    "remoteRoot": ""
                }
            ],
            "logToFile": true,
            "justMyCode": false
        },
    ]
}